	filePath: '${1}',
	success: (res) => {
		${2:console.log(res.size)  // 文件大小，单位B
		console.log(res.createTime)  // 文件保存时的时间戳，从1970/01/01 08:00:00 到该时刻的秒数}
	},
	fail: (res) => {
		${3}
	},
	complete: (res) => {
		${4}
	}
})
]]></content>
